{
  "extends": "./tsconfig.base.json",
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test-d.ts"
  ],
  "compilerOptions": {
    "module": "CommonJS",   // Use CommonJS for CJS build
    "moduleResolution": "Node", // Use Node resolution for CommonJS
    "outDir": "./dist/cjs", // Output to cjs folder
    "sourceMap": true,
    "declaration": true,    // Generate type declarations for CJS too
    "declarationMap": true, // Generate declaration maps for better debugging
    "verbatimModuleSyntax": false // Disable strict ESM/CJS separation
  }
}